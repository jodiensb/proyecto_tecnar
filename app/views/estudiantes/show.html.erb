<h1 class="text-center">MODIFICAR ESTUDIANTE</h1>
</br>
<div class="modal-content text-center">
<div class="table-responsive">
  <table class="table">

    <thead>
      <div class="row">
        <tr class="warning">
          <th class="text-center" colspan="2">Id</th>
          <th class="text-center">Codigo</th>
          <th class="text-center">Ingreso</th>
          <th class="text-center">Egreso</th>
          <th class="text-center">Nombre</th>
          <th class="text-center">Apellidos</th>
          <th class="text-center">Facultad</th>
          <th class="text-center">Programa</th>
          <th class="text-center">Telefono</th>
          <th class="text-center">Correo</th>
          <th class="text-center">Direccion</th>
        </tr>
      </div>
    </thead>

    <tbody>
      <div class="row">
      <tr class="text-center">
        <td colspan="2" class="info"><%= @estudiante.id%></td>
        <td><%= @estudiante.codigo%></td>
        <td><%= @estudiante.ingreso%></td>
        <td><%= @estudiante.egreso%></td>
        <td><%= @estudiante.nombre%></td>
        <td><%= @estudiante.apellidos%></td>
        <td><%= @estudiante.facultad.nombre%></td>
        <td><%= @estudiante.programa.nombre%></td>
        <td><%= @estudiante.telefono%></td>
        <td><%= @estudiante.correo%></td>
        <td><%= @estudiante.direccion%></td>
        </tr>
      </div>
    </tbody>

  </table>
</div>

</br>
<div class="actions">
<%= link_to "Editar", edit_estudiante_path(@estudiante[:id]), class: "btn btn-ttc active"%>
<%= link_to "Nuevo Registro", new_estudiante_path, class: "btn btn-ttc active"%>
<%= link_to "Regresar", estudiantes_path, class: "btn btn-ttc active" %>
<%= link_to "Eliminar", estudiante_path(@estudiante), method: :delete,
data: { confirm: 'Eliminar Estudiante?' }, class: "btn btn-danger active"%>
</div>
</br>
</div>

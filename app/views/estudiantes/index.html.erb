<h1 class="text-center">LISTADO DE ESTUDIANTES REGISTRADOS</h1>

</br>
<div class="modal-content text-center">
<div class="table-responsive">
<table class="table">

<thead>
  <div class="row">
    <tr class="success">
      <th class="text-center" colspan="2">Editar Id</th>
      <th class="text-center">Codigo</th>
      <th class="text-center">Ingreso</th>
      <th class="text-center">Egreso</th>
      <th class="text-center">Nombre</th>
      <th class="text-center">Apellidos</th>
      <th class="text-center">Facultad</th>
      <th class="text-center">Programa</th>
      <th class="text-center">Telefono</th>
      <th class="text-center">Correo</th>
      <th class="text-center">Direccion</th>
    </tr>
  </div>
</thead>


<% @estudiantes.each do |estudiante|%>

<tbody>
  <div class="row">
    <tr class="text-center">
    <td colspan="2" class="warning">
    <%= link_to estudiante.id, estudiante_path(estudiante), class:"btn btn-warning active"%></td>
    <td><%= estudiante.codigo%></td>
    <td><%= estudiante.ingreso%></td>
    <td><%= estudiante.egreso%></td>
    <td><%= estudiante.nombre%></td>
    <td><%= estudiante.apellidos%></td>
    <td><%= estudiante.facultad.nombre%></td>
    <td><%= estudiante.programa.nombre%></td>
    <td><%= estudiante.telefono%></td>
    <td><%= estudiante.correo%></td>
    <td><%= estudiante.direccion%></td>
    </tr>
  </div>
</tbody>

    <%end%>

  </table>
</div>

